<turbo-frame id="location_response">
  <div class="summary_div">
    <% if erred %>
      <p class="fs-6">Location Response: <%= locations %></p>
    <% else %>
      <p class="fs-6">Location Response from: <%= location %>, Total Locations: <%= total %></p>
      <table class="table">
        <thead>
        <tr>
          <th scope="col">Location</th>
          <th scope="col">Summary</th>
        </tr>
        </thead>
        <tbody>
        <% locations.each do |location| %>
          <tr>
            <td><p class="fs-8 geo_formatted"><%= location["formatted"] %></p></td>
            <td>
              <%= button_to "Forecast", "summary",
                            method: :post,
                            params: {lat: location["geometry"]["lat"], long: location["geometry"]["lng"] },
                            form: {data: { turbo_frame: "summary_response"}},
                            class: "btn btn-primary"
              %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>

  </div>
</turbo-frame>